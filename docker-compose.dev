version: '3'
services:
  server:
    build:
      context: .
      dockerfile: Dockerfile
    volumes:
      - './:/opt/code'
    ports:
      - '9229:9229'
    env_file: ./.env
    environment:
      APP_PORT: '${APP_PORT}'
      APP_DEBUG: true
    networks:
      - homepage
  redis:
    image: redis:alpine
    ports:
      - '6379:6379'
    networks:
      - homepage
  nginx:
    image: nginx:alpine
    ports:
      - '${APP_PORT}:80'
    networks:
      - homepage
    volumes:
      - './config/nginx:/etc/nginx'
  db:
    image: postgres:alpine
    ports:
      - '5432:5432'
    environment:
      POSTGRES_PASSWORD: '${DB_PASSWORD}'
      POSTGRES_USER: '${DB_USERNAME}'
      POSTGRES_DB: '${DB_DATABASE}'
    volumes:
      - './data/db:/var/lib/postgresql'
    networks:
      - homepage
  adminer:
    image: adminer:standalone
    ports:
      - '8001:8080'
    networks:
      - homepage
    environment:
      ADMINER_DEFAULT_SERVER: postgres
      ADMINER_DESIGN: rmsoft

networks:
  homepage:
    driver: bridge